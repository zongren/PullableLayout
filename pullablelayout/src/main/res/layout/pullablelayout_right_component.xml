<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullable_container_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/pullable_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pullable_status_textView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@mipmap/pullablelayout_ic_arrow_left"/>

    <ImageView
        android:id="@+id/pullable_loading_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pullable_status_textView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@mipmap/pullablelayout_ic_loading"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pullable_status_textView"
        android:layout_width="20dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:gravity="start|center_vertical"
        android:text="@string/pullablelayout_pull_to_load"
        android:textColor="#222222"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/pullable_previous_update_textView"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/pullable_status_textView"
        android:gravity="start|center_vertical"
        android:text="@string/pullablelayout_previous_update_time"
        android:textColor="#999999"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/pullable_result_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pullable_status_textView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/pullablelayout_ic_succeed"
        android:visibility="gone"/>

</RelativeLayout>