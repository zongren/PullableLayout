<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullable_container_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/pullablelayout_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/pullablelayout_ic_arrow_up"/>

    <ImageView
        android:id="@+id/pullablelayout_loading_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/pullablelayout_ic_loading"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pullablelayout_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="start|center_vertical"
        android:text="@string/pullablelayout_pull_to_load"
        android:textColor="#222222"
        android:textSize="16sp"/>

    <!--<TextView
        android:id="@+id/pullablelayout_previous_update_textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/pullable_status_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="start|center_vertical"
        android:text="@string/pullablelayout_previous_update_time"
        android:textColor="#999999"
        android:textSize="12sp"
        />-->

    <ImageView
        android:id="@+id/pullablelayout_result_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/pullablelayout_ic_succeed"
        android:visibility="gone"/>

</RelativeLayout>